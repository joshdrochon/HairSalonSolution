@{
  Layout = "_Layout";
}
<div class="jumbotron">
  <p><a href="/">Home</a></p>
  <form style="display:inline-block;" action="/stylists/@Model.GetId()/update" method="post">
    <input type="text" name="newname" placeholder=" @Model.GetName()">
    <button class="btn btn-success" type="submit">Confirm</button>
  </form>
</div>

<div id="cancel">
  <button id="cancel-btn"/>Cancel</button>
</div>

<script>
  $(document).ready(function(){
    $("#cancel-btn").click(function(event) {
      window.location = "/";
    });
  });
</script>
