@using HairSalonProject.Models;

@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <p><a href='/'>Home</a></p>
  <p><text>Title: </text>@Model.GetTitle()</p>
  <p><text>Description: </text>@Model.GetDescription()</p>

  <hr>
  <p>Stylists with this specialty:</p>
    @foreach(var stylist in Model.GetStylists())
    {
      <p class="left-shift">@stylist.GetName()</p>
    }
    <p class="left-shift"><a href="/stylists/new">Add</a></p>
</div>

